@{
    var orders = (List<OrderModel>) ViewBag.Orders;
    var user = (UserModel) ViewBag.User ;

    ViewData["Title"] = user.Fname;    
    string bgImage = "/pexels-lumn.jpg";
}

<div class="" style="background: url(@bgImage) no-repeat center center; background-size: cover; height: 800px">
    <div class="text-center" style="height: 800px; background-color: rgba(0,0,0,0.5); ">
        @await Html.PartialAsync("_PartialNavbar")
        <div style=" height:100%; display:flex; flex-direction:column;justify-content: center">
            <h1 class="display-4" style="color: white; font-size: 120px; font-weight: bold; font-family: Pattaya,serif;">@user.Fname @user.Lname</h1>
            
        </div>
    </div>
</div>

<div class="Homebody container ">
    <h1>@user.Fname @user.Lname</h1>
    <span>Phone number : @user.PhoneNumber</span>
    <span>Birth Date : @user.BirthDate</span>
    <br/>
    <br/>
    <h2>Orders</h2>
    @foreach (var order in orders)
    {
        <div class="card user-card" style="
         padding: 20px;
         margin-top: 10px;
         border: 0;
         box-shadow: 2px 3px 8px rgba(0,0,0,0.2);
        ">
            <div class="row ">
                <div class="col-10">
                    <h1>#@order.Id</h1>
                </div>
                <div class="col-2 text-center">
                    <a class="btn btn-dark" href="/Users/OrderDetails/@order.Id">Details</a>
                </div>
            </div>

        </div>
    }
</div>